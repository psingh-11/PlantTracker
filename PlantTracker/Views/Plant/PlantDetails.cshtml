                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>

            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active" style="background-image: url(/Images/Plant/8451acdc-ab74-46ec-89ea-9abf5592e03f/457d280e-82f9-4601-941c-230d3bcaf219.jpg)  ">
